@model IEnumerable<ProyectoCarga.Models.Archivos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card" style="margin-top:50px">
            <div class="card-header bg-primary text-white">
                <h4>Lista Archivos</h4>
            </div>
            <div class="card-body">
                
                <a class="btn btn-success" href="@Url.Action("Subir","Archivo")">Subir Archivo</a>
                <hr />
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Tipo</th>
                                <th style="width:100px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ProyectoCarga.Models.Archivos archivo in Model)
                            {
                                <tr>
                                    <td>@archivo.Nombre</td>
                                    <td>
                                        <img src="@Url.Content("~/Imagenes/" + archivo.Extension.Replace(".","") + ".jpg")" width="50"/>
                                    </td>
                                    <td>
                                        <form action="@Url.Action("DescargarArchivo","Archivo")" method="post">
                                            <input type="hidden" name="IdArchivo" value="@archivo.IdArchivo"/>
                                            <button class="btn btn-danger btn-sm" type="submit">Descargar</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>